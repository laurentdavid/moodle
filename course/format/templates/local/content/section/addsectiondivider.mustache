{{!
    @template core_courseformat/local/content/section/addsectiondivider

    Displays the add section divider inside a section.

    Example context (json):
    {
        "showaddsection": true,
        "id": 42,
        "insertafter": true,
        "num": 0,
        "addsections": {
            "url": "#",
            "title": "Add section",
            "newsection": 3
        }
    }
}}
{{#showaddsection}}
<div class="changenumsections bulk-hidden {{^canaddsection}}disabled{{/canaddsection}}" data-region="section-addsection">
    {{#addsections}}
    {{< core_courseformat/local/content/divider}}
        {{$extraclasses}}always-hidden mt-2{{/extraclasses}}
        {{$content}}
            <div class="d-flex d-flex justify-content-center align-items-center">
                <a href="{{{url}}}"
                   class="btn add-content section-modchooser section-modchooser-link p-1 icon-no-margin"
                   data-add-sections="{{title}}"
                   data-new-sections="{{newsection}}"
                   data-action="addSection"
                    {{#insertafter}} data-id="{{id}}" {{/insertafter}}
                   title="{{title}}"
                >
                    {{#pix}} t/add, core {{/pix}}
                </a>
                <div
                        data-region="max-sections-warning"
                        class="align-items-center" tabindex="0"
                        data-toggle="tooltip"
                        title="{{#str}}sectionaddmax, core_courseformat{{/str}}">
                    <button
                            class="btn btn-link p-1 icon-no-margin"
                            title="{{#str}}sectionaddmax, core_courseformat{{/str}}"

                    >{{#pix}} t/add, core {{/pix}}
                    </button>
                </div>
            </div>
        {{/content}}
    {{/ core_courseformat/local/content/divider}}
    {{/addsections}}
</div>
{{/showaddsection}}
