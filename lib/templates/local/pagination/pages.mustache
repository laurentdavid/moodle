{{!
    @template core/local/pagination/pages

    This template renders each of the content regions for a paginated
    content section.

    Example context (json):
    {
        "pages": [
            {
                "active": true,
                "page": 1,
                "content": "<p>Some page content</p>"
            },
            {
                "page": 2,
                "content": "<p>Some page content</p>"
            }
        ]
    }
}}
<div
    id="pages-container-{{uniqid}}"
    data-region="pages-container"
    data-reactive-id="{{reactiveid}}"
    class="paged-content-page-container"
    aria-live="polite"
>
   <div data-region="pages-content"></div>
</div>
{{#js}}
require(['core/local/pagination/pages'], function(component) {
    component.init(document.getElementById('pages-container-{{uniqid}}'));
});
{{/js}}