{{!
    @template  tool_policy/policy_switch

    Template for the policy switch button

    Context variables required for this template:

    Example context (json):
    {
        "id": 1,
        "name": "Terms &amp; conditions"
    }
}}

<li class="tool-policy-switch custom-control custom-switch">
    <input type="checkbox" class="custom-control-input policy-checkbox" name="{{shortname}}" id="cat-{{uniqid}}-{{id}}" data-id="{{id}}"
           {{#policyagreed}}checked{{/policyagreed}} data-mandatory="{{mandatory}}" {{#mandatory}}disabled{{/mandatory}}>
    <label class="custom-control-label" for="cat-{{uniqid}}-{{id}}">
        <a  class="text-dark" href="{{pluginbaseurl}}/view.php?versionid={{id}}{{#returnurl}}&amp;returnurl={{.}}{{/returnurl}}"
            data-action="view-guest"
            data-versionid="{{id}}"
            data-behalfid="1"
            data-name="{{shortname}}"
             >
            {{ name }}
        </a>
    </label>
</li>
