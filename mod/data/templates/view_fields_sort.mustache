{{!
    @template mod_data/view_fields_sort

    Field sort form template

    Example context (json):
    {
        "formurl": "http://moodle.org",
        "cmid": "1",
        "sesskey": "abcd",
        "sorts" : [
            {
                "groupname": "Group 1",
                "options": [
                    {
                        "id": "1",
                        "label": "label1"
                    },
                    {
                        "id": "2",
                        "label": "label2"
                    }
                ]
            },
            {
                "groupname": "Group 2",
                "options": [
                    {
                        "id": "1",
                        "label": "labela"
                    },
                    {
                        "id": "2",
                        "label": "labelb"
                    }
                ]
            }
        ],
        "sortdir" : [
            {
                "id": "1",
                "label": "label1"
            },
            {
                "id": "2",
                "label": "label2"
            }
        ]
    }
}}
<div class="mod_data_fields_sort sortdefault">
    <form id="sortdefault" action="{{formurl}}" method="get">
        {{#currentparams}}
            <input type="hidden" name="{{key}}" value="{{value}}"/>
        {{/currentparams}}
        <input type="hidden" name="sesskey" value="{{sesskey}}"/>
        <label for="defaultsort">{{#str}}defaultsortfield, mod_data{{/str}}</label>
        <select id="defaultsort" name="defaultsort" class="custom-select">
            {{#sorts}}
                <optgroup label="{{groupname}}">
                    {{#options}}
                        <option value="{{id}}" {{#selected}}selected{{/selected}}>{{label}}</option>
                    {{/options}}
                </optgroup>
            {{/sorts}}
        </select>
        <label for="menudefaultsortdir" class="accesshide">{{#str}}sortby{{/str}}</label>
        <select id="menudefaultsortdir" name="defaultsortdir" class="select custom-select menudefaultsortdir">
            {{#sortdir}}
                <option value="{{id}}" {{#selected}}selected{{/selected}}>{{label}}</option>
            {{/sortdir}}
        </select>
        <input type="submit" class="btn btn-secondary ml-1" value="{{#str}}save, mod_data{{/str}}"/>
    </form>
</div>