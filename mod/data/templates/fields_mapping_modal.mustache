{{!
    @template mod_data/field_mapping_modal

    Display a modal to decide on field mapping

    Example context (json):
    {
        "title": "Modal title",
        "buttons": {
                "url" : "#",
                "primary" : true,
                "tooltip" : "This is a tooltip",
                "label": "Cancel",
                "id": "id123",
                "method": "post"
        },
        "fieldstodelete": "A, B, C"
    }
}}
{{< core/modal }}
    {{$body}}
        {{#fieldstocreate}}
            <div class="my-2"><span>{{#str}}mapping:fieldstocreate, mod_data, {{.}}{{/str}}</span></div>
        {{/fieldstocreate}}
        {{#fieldstoupdate}}
            <div class="my-2"><span>{{#str}}mapping:fieldstoupdate, mod_data, {{.}}{{/str}}</span></div>
        {{/fieldstoupdate}}
        {{#fieldstodelete}}
            <div class="my-2">
                <span>{{#str}}mapping:fieldstodelete, mod_data, {{.}}{{/str}}</span>
            </div>
            <div class="my-2">
                {{#str}}mapping:warningmessage, mod_data{{/str}}
            </div>
        {{/fieldstodelete}}
    {{/body}}
    {{$footer}}
        {{#buttons}}
            {{>core/single_button}}
        {{/buttons}}
    {{/footer}}
{{/ core/modal }}
