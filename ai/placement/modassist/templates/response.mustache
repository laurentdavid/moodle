{{!
    @template aiplacement_modassist/response

    Template to display reponse content for AI placement.

    Context variables required for this template:
    * content - Content to display

    Example context (json):
    {
        "content": "<p>Content to display</p>"
    }
}}
<section class="card mb-3">
    <div class="card-body p-3">
        <h3 id="instance-9-header" class="h5 card-title d-inline">
            {{#str}} results, aiplacement_modassist {{/str}}
        </h3>
        <div class="card-text content mt-3">
            <div id="mod-ai-assist-response" class="mb-3">
                {{{content}}}
            </div>
            <div class="mod-ai-assist-response-watermark">
                <small class="text-muted">
                    {{#pix}} sparkles, aiplacement_modassist {{/pix}}
                    {{#str}} contentwatermark, core_ai {{/str}}
                </small>
            </div>
            <div class="mod-ai-assist-response-controls d-block pt-3">
                <button class="btn btn-sm btn-outline-secondary" data-action="mod-ai-assist-regenerate">
                    {{#pix}} a/refresh, core {{/pix}}
                    {{#str}} regenerate, aiplacement_modassist {{/str}}
                </button>
                <button class="btn btn-sm btn-outline-secondary" data-action="mod-ai-assist-apply">
                    {{#pix}} e/save, core {{/pix}}
                    {{#str}} apply, aiplacement_modassist {{/str}}
                </button>
            </div>
        </div>
    </div>
</section>
